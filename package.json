  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.24",
    "docx": "^9.5.3",
    "playwright": "^1.58.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
