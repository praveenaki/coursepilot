{
  "name": "coursepilot",
  "description": "AI-powered course companion Chrome extension",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
